<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import net.kurobako.gesturefx.GesturePane?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label text="This sample shows the GesturePane being defined in FXML, you may open this fxml file in SceneBuilder and the editing should still work" wrapText="true">
            <padding>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
            </padding>
        </Label>


        <GesturePane fitHeight="false" fitWidth="false" maxXScale="9.0" maxYScale="9.0" prefHeight="300.0" prefWidth="300.0" VBox.vgrow="ALWAYS">
            <ImageView pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@lena.png" />
                </image>
            </ImageView>
        </GesturePane>


    </children>
</VBox>
